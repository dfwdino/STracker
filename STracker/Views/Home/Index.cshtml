@model STracker.Login

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
<div class="col">@Html.ValidationSummary()</div>
<div class="row" style="margin-left:10px !important">
    <div class="col">@Html.LabelFor(m => m.UserName) @Html.EditorFor(m => m.UserName)</div>
</div>


    <div class="row" style="margin-left:10px !important">
        <div class="col">@Html.LabelFor(m => m.Password) @Html.TextBoxFor(m => m.Password, new { @type = "password" })</div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}